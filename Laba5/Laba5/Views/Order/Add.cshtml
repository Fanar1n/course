@model Laba5.Models.Order

@{
    ViewData["Title"] = "Add";
}

<h1>Добавление нового заказа</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Первое блюдо
                <select asp-for="IdDish1" asp-items="ViewBag.Dishes1"></select>
            </div>
            <div class="form-group">
               Второе блюдо
                <select asp-for="IdDish2" asp-items="ViewBag.Dishes2"></select>
            </div>
            <div class="form-group">
                Третье блюдо
                <select asp-for="IdDish3" asp-items="ViewBag.Dishes3"></select>
            </div>
            <div class="form-group">
                Четвертое блюдо
                <select asp-for="IdDish4" asp-items="ViewBag.Dishes4"></select>
            </div>
            <div class="form-group">
                Столик
                <select asp-for="IdTable" asp-items="ViewBag.Tables"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderTime" class="control-label"></label>
                <input asp-for="OrderTime" class="form-control" />
                <span asp-validation-for="OrderTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">На главную страницу</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
